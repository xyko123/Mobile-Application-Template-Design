}

@Composable
fun RegisterButton() {
    var buttonState by remember { mutableStateOf<ButtonState>(ButtonState.Default) }
    
    Button(
        onClick = {
            buttonState = ButtonState.Loading
            // Simulate registration
        },
        modifier = Modifier
            .fillMaxWidth()
            .height(60.dp),
        shape = RoundedCornerShape(16.dp),
        colors = ButtonDefaults.buttonColors(
            containerColor = Color.White
        ),
        elevation = ButtonDefaults.buttonElevation(
            defaultElevation = 8.dp,
            pressedElevation = 4.dp
        )
    ) {
        when (buttonState) {
            ButtonState.Default -> {
                Text(
                    text = "ðŸƒ Register Now - \$35",
                    fontSize = 18.sp,
                    fontWeight = FontWeight.Bold,
                    color = Color(0xFFFF6B35)
                )
            }
            ButtonState.Loading -> {
                CircularProgressIndicator(
                    modifier = Modifier.size(24.dp),
                    color = Color(0xFFFF6B35),
                    strokeWidth = 3.dp
                )
            }
            ButtonState.Success -> {
                Row(verticalAlignment = Alignment.CenterVertically) {
                    Icon(
                        Icons.Default.CheckCircle,
                        contentDescription = "Success",
                        tint = Color.Green
                    )
                    Spacer(modifier = Modifier.width(8.dp))
                    Text("Registration Complete!")
                }
            }
        }
    }
    
    Text(
        text = "Limited slots available!",
        modifier = Modifier
            .fillMaxWidth()
            .padding(top = 8.dp),
        textAlign = TextAlign.Center,
        fontSize = 14.sp,
        color = Color.White.copy(alpha = 0.7f)
    )
}

@Composable
fun FloatingCircles() {
    val infiniteTransition = rememberInfiniteTransition()
    
    val float1 by infiniteTransition.animateFloat(
        initialValue = 0f,
        targetValue = 1f,
        animationSpec = infiniteRepeatable(
            animation = tween(3000, easing = FastOutSlowInEasing),
            repeatMode = RepeatMode.Reverse
        )
    )
    
    Box(modifier = Modifier.fillMaxSize()) {
        // Floating circles
        Box(
            modifier = Modifier
                .offset(x = 250.dp, y = 80.dp)
                .size(80.dp)
                .clip(CircleShape)
                .background(Color.White.copy(alpha = 0.1f))
                .scale(0.8f + float1 * 0.2f)
        )
        
        Box(
            modifier = Modifier
                .offset(x = 40.dp, y = 320.dp)
                .size(128.dp)
                .clip(CircleShape)
                .background(Color.Yellow.copy(alpha = 0.2f))
        )
        
        Box(
            modifier = Modifier
                .offset(x = 280.dp, y = 520.dp)
                .size(96.dp)
                .clip(CircleShape)
                .background(Color(0xFFFFA500).copy(alpha = 0.2f))
        )
    }
}

// Data classes
data class CountdownData(
    val days: String,
    val hours: String,
    val minutes: String,
    val seconds: String
)

data class Feature(
    val icon: String,
    val title: String
)

sealed class ButtonState {
    object Default : ButtonState()
    object Loading : ButtonState()
    object Success : ButtonState()
}

fun getCountdown(): CountdownData {
    val eventDate = LocalDate.of(2024, 3, 15).atTime(7, 0)
    val now = LocalDateTime.now()
    val duration = java.time.Duration.between(now, eventDate)
    
    return if (duration.isNegative) {
        CountdownData("00", "00", "00", "00")
    } else {
        val days = duration.toDays()
        val hours = duration.toHours() % 24
        val minutes = duration.toMinutes() % 60
        val seconds = duration.seconds % 60
        
        CountdownData(
            days = days.toString().padStart(2, '0'),
            hours = hours.toString().padStart(2, '0'),
            minutes = minutes.toString().padStart(2, '0'),
            seconds = seconds.toString().padStart(2, '0')
        )
    }
}

@Composable
fun FunRunMarathonTheme(content: @Composable () -> Unit) {
    MaterialTheme(
        colorScheme = LightColorScheme,
        typography = Typography,
        content = content
    )
}

val LightColorScheme = lightColorScheme(
    primary = Color(0xFFFF6B35),
    secondary = Color(0xFFFF8E53),
    tertiary = Color(0xFFFFB347)
)

