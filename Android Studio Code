@Composable
fun InfoRow(icon: String, title: String, value: String) {
    Row(verticalAlignment = Alignment.CenterVertically) {
        Box(
            modifier = Modifier
                .size(48.dp)
                .clip(RoundedCornerShape(16.dp))
                .background(
                    brush = Brush.linearGradient(
                        colors = listOf(Color(0xFFF97316), Color(0xFFEF4444))
                    )
                ),
            contentAlignment = Alignment.Center
        ) {
            Text(icon, fontSize = 24.sp)
        }
        
        Spacer(modifier = Modifier.width(12.dp))
        
        Column {
            Text(
                text = title,
                fontSize = 14.sp,
                color = Color.Gray
            )
            Text(
                text = value,
                fontSize = 18.sp,
                fontWeight = FontWeight.Bold
            )
        }
    }
}

@Composable
fun RaceCategoriesSection(selectedRace: String, onRaceSelected: (String) -> Unit) {
    Column {
        Text(
            text = "Choose Your Race",
            fontSize = 20.sp,
            fontWeight = FontWeight.Bold,
            color = Color.White
        )
        
        Spacer(modifier = Modifier.height(12.dp))
        
        Row(
            modifier = Modifier.fillMaxWidth(),
            horizontalArrangement = Arrangement.spacedBy(8.dp)
        ) {
            RaceCategoryButton(
                distance = "5K",
                level = "Beginner",
                icon = "ðŸ¥‰",
                isSelected = selectedRace == "5K",
                onClick = { onRaceSelected("5K") }
            )
            
            RaceCategoryButton(
                distance = "10K",
                level = "Intermediate",
                icon = "ðŸ¥ˆ",
                isSelected = selectedRace == "10K",
                onClick = { onRaceSelected("10K") }
            )
            
            RaceCategoryButton(
                distance = "21K",
                level = "Advanced",
                icon = "ðŸ¥‡",
                isSelected = selectedRace == "21K",
                onClick = { onRaceSelected("21K") }
            )
        }
    }
}

@Composable
fun RaceCategoryButton(
    distance: String,
    level: String,
    icon: String,
    isSelected: Boolean,
    onClick: () -> Unit
) {
    Card(
        modifier = Modifier
            .weight(1f)
            .aspectRatio(1f),
        shape = RoundedCornerShape(16.dp),
        colors = CardDefaults.cardColors(
            containerColor = if (isSelected) 
                Color.White.copy(alpha = 0.3f) 
            else 
                Color.White.copy(alpha = 0.2f)
        ),
        border = if (isSelected) BorderStroke(2.dp, Color.White) else null,
        onClick = onClick
    ) {
        Column(
            modifier = Modifier.padding(16.dp),
            horizontalAlignment = Alignment.CenterHorizontally,
            verticalArrangement = Arrangement.Center
        ) {
            Text(icon, fontSize = 32.sp)
            Spacer(modifier = Modifier.height(8.dp))
            Text(
                text = distance,
                fontSize = 20.sp,
                fontWeight = FontWeight.Bold,
                color = Color.White
            )
            Text(
                text = level,
                fontSize = 12.sp,
                color = Color.White.copy(alpha = 0.7f)
            )
        }
    }
}

